<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
  	
  	<!-- JSF and Spring are integrated -->
  	<application>
  		<message-bundle>resources.application</message-bundle>
    	<el-resolver>
    		org.springframework.web.jsf.el.SpringBeanFacesELResolver
    	</el-resolver>
    	<locale-config>
    		<default-locale>en</default-locale>
    	</locale-config>
  	</application>
	
	<!-- configuration of navigation rules -->	
	<navigation-rule>
	    <from-view-id>/faces/index.xhtml</from-view-id> 
	    
	    <navigation-case>
	    	<from-action>#{transactionBean.addTransaction}</from-action>
	        <from-outcome>success</from-outcome>
            <to-view-id>/faces/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
         <navigation-case>
         	<from-action>#{transactionBean.addTransaction}</from-action>
	        <from-outcome>error</from-outcome>
            <to-view-id>/faces/error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule> 
    	<from-view-id>/faces/success.xhtml</from-view-id>   
    	<navigation-case>
	        <from-action>#{transactionBean.getTransactionList}</from-action>
	        <to-view-id>/faces/success.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
</faces-config>